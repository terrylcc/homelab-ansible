[global]
  workgroup = WORKGROUP
  server string = Samba Server
  server role = standalone server

  security = user
  hosts allow = 192.168. 127.

[public]
  comment = Public share
  path = /tmp
  public = yes
  writable = yes
  printable = no

[terryshare]
  comment = Terry's home directory
  path = /srv/samba/home/terryleung
  valid users = terryleung
